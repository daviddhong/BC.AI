<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="288dp"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:text=""
        android:id="@+id/text_view_ml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_above="@+id/upload_others_image_button"/>

    <Button
        android:layout_above="@+id/upload_image_button"
        android:id="@+id/upload_others_image_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#000"
        android:textColor="@android:color/white"
        android:text="Upload Client's Card"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"/>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/upload_image_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:background="#000"
        android:textColor="@android:color/white"
        android:text="Upload My Card" />


    <ImageButton
        android:id="@+id/button_select"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="pickImage"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/ic_photo_camera"
        android:tint="#FFF"
        android:backgroundTint="#000" />




</RelativeLayout>

