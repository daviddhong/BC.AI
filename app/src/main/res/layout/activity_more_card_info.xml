<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/detailedcard_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_arrow_back_black"
            android:tint="#000" />

    </RelativeLayout>







    <RelativeLayout
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:id="@+id/phone_icon"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:background="@drawable/background_oval_unfilled_phone"
            android:onClick="callNumber">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_phone"
                android:tint="#000" />
        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="88dp"
        android:layout_toRightOf="@+id/rl_phone"
        android:background="@drawable/background_oval_unfilled_phone">

        <ImageView
            android:id="@+id/message_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:onClick="smsSendMessage"
            android:src="@drawable/ic_message_black_24dp"
            android:tint="#000" />
    </RelativeLayout>

    </RelativeLayout>



    <TextView
        android:id="@+id/detailedcardname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:text="Business Card of:"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textViewasd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailedcardname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="Tim Apple"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:textStyle="bold" />


    <TextView
        android:layout_marginTop="45dp"
        android:layout_below="@+id/textViewasd"
        android:id="@+id/emaillllll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Email:"
        android:textStyle="bold" />



    <RelativeLayout
        android:layout_marginTop="13dp"
        android:layout_below="@+id/emaillllll"
        android:id="@+id/emailthecardd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="250dp">

        <Button
            android:id="@+id/emailcard"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:background="@drawable/background_rectangle_circular_border"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="timApple@nwhacks.com" />
    </RelativeLayout>


</RelativeLayout>

