<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="57dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_logo" />

        <TextView
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="38dp"
            android:layout_marginTop="50dp"
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business Card Intelligence" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/toppart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp">


        <TextView
            android:id="@+id/email_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#000"
            android:layout_marginLeft="3dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_textview"
            android:ems="17"
            android:backgroundTint="#000"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/password_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_edit_text"
            android:layout_marginTop="20dp"
            android:text="Password"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"/>


        <EditText
            android:id="@+id/password_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_textview"
            android:ems="17"
            android:inputType="textPassword"
            android:backgroundTint="#000"/>


        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/password_edit_text"
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Your Password?"
            android:textColor="#767676"
            android:layout_marginLeft="3dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signup_button"
        android:layout_width="128dp"
        android:layout_height="35dp"
        android:layout_marginRight="22.5dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_rectangle_border">

        <TextView
            android:id="@+id/textView_make_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Create Account"
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toppart">

        <RelativeLayout
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/background_rectangle_fill">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Sign in"
                android:textColor="#FFF"
                android:textSize="17sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>